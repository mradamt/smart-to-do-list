<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>


  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link
    href="https://fonts.googleapis.com/css2?family=Righteous&family=Roboto:ital,wght@0,300;0,400;1,300;1,400&display=swap"
    rel="stylesheet">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/new_todo.css" type="text/css" />
  <link rel="stylesheet" href="/styles/lists.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/list_rendering.js"></script>
  <script type="text/javascript" src="/scripts/list_collapse.js"></script>

  <!-- disable viewport zoom-->
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
</head>

<body>
  <% if (isActive === true) {%>
    <nav>
      <span id="left-nav" class="title">Smart-To-Do</span>
      <div id="right-nav" class="title">
        <button class="nav-buttons nav-button" id="new">New</button>
        <button class="nav-buttons nav-button selected" id="current">Current</button>
        <button class="nav-buttons nav-button" id="archived">Archived</button>
      </div>
    </nav>
  <% } else if (isActive === false) {%>
    <nav>
      <span id="left-nav" class="title">Smart-To-Do</span>
      <div id="right-nav" class="title">
        <button class="nav-buttons nav-button" id="current">Current</button>
        <button class="nav-buttons nav-button selected" id="archived">Archived</button>
      </div>
    </nav>
    <% };%>

  <% if (userId === '1') {%>
    <header id="main-header">
      <div>
        <h2 class="shadow">Jim Dumpling</h2>
      </div>
      <div>
        <img class="shadow" src="/images/profile-user.png" />
      </div>
    </header>
    <% } else {%>
      <header id="main-header">
        <div>
          <h2 class="shadow">Bob Mango</h2>
        </div>
        <div>
          <img class="shadow" src="/images/profile-user.png" />
        </div>
      </header>
    <% };%>

  <main class="container">

    <section class="new-item">
      <h2>Enter New To-Do</h2>
      <form id="form" class = "form-new-to-do">
        <textarea id="todo-text" name="text"></textarea>
        <div class="footer">
          <button class="button" id="submit-button">Submit</button>
        </div>
      </form>
    </section>


    <section id="list-section">

      <!-- Watch -->
      <h2 class="list-header to-watch">To Watch</h2>
      <div class="list-container" id="to-watch">
        <article class="list">
          <header>
            <span>To-Do</span>
            <span id="rating-header">Urgency</span>
          </header>

          <div id="1-body" class="todo-body">

            <ol id="1-items" class="todo-items"></ol>

            <ul id="1-ratings"class='ratings'></ul>

            <ul id="1-delete" class='delete-buttons'></ul>

            <ul id="1-move" class='move-buttons'></ul>

          </div>

        </article>
      </div>

      <!-- Read -->
      <h2 class="list-header to-read">To Read</h2>
      <div class="list-container" id="to-read">
        <article class="list">

          <header>
            <span>To-Do</span>
            <span id="rating-header">Urgency</span>
          </header>

          <div id="2-body" class="todo-body">

            <ol id="2-items" class="todo-items"></ol>

            <ul id="2-ratings" class='ratings'></ul>

            <ul id="2-delete" class='delete-buttons'></ul>

            <ul id="2-move" class='move-buttons'></ul>

          </div>

        </article>
      </div>

      <!-- Eat -->
      <h2 class="list-header to-eat">To Eat</h2>
      <div class="list-container" id="to-eat">
        <article class="list">
          <header>
            <span>To-Do</span>
            <span id="rating-header">Urgency</span>
          </header>

          <div id="3-body" class="todo-body">

            <ol id="3-items" class="todo-items"></ol>

            <ul id="3-ratings" class='ratings'></ul>

            <ul id="3-delete" class='delete-buttons'></ul>

            <ul id="3-move" class='move-buttons'></ul>

          </div>

        </article>
      </div>

      <!-- Buy -->
      <h2 class="list-header to-buy">To Buy</h2>
      <div class="list-container" id="to-buy">
        <article class="list">
          <header>
            <span>To-Do</span>
            <span id="rating-header">Urgency</span>
          </header>

          <div id="4-body" class="todo-body">

            <ol id="4-items" class="todo-items"></ol>

            <ul id="4-ratings" class='ratings'></ul>

            <ul id="4-delete" class='delete-buttons'></ul>

            <ul id="4-move" class='move-buttons'></ul>

          </div>

        </article>
      </div>

    </section>

  </main>

</body>

</html>
